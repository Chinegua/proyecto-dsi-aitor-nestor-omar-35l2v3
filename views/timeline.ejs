<div class="container card">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <h2>Timeline de eventos</h2>
        </div>
        <div class="col-md-2 col-md-offset-2 create_button">
            <a href="calendar/create" type="button" class="btn btn-success btn-lg">Crear evento</a>
        </div>
    </div>

</div>

<br>
<div class="container card">

    <ul class="timeline">
        <% for(var i=0; i<events.length; i++) {%>
        <%if((i % 2) == 0){%>
        <li>
            <div class="timeline-badge primary"><a class="timeline-icon"><i class="glyphicon glyphicon-record" rel="tooltip" title="Prueba hace un rato" id=""></i></a></div>
            <div class="timeline-panel">
                <div class="timeline-heading">
                    <p style="position: center;"><%= events[i].title%></p>
                </div>
                <div class="timeline-body">
                    <p><%= events[i].description%></p>
                </div>
                <div class="timeline-footer">
                    <a class="pull-right"><%= events[i].date%>, <%= events[i].hour%></a>
                    <a href="/edit" class="btn btn-info" role="button"><i class="fa fa-cog" aria-hidden="true"></i></i></a>
                    <a href="/delete" class="btn btn-danger" role="button"><i class="fa fa-times" aria-hidden="true"></i></a>
                </div>
            </div>
        </li>
        <% } %>
        <% if((i % 2) != 0){ %>

        <li class="timeline-inverted">
            <div class="timeline-badge primary"><a class="timeline-icon"><i class="glyphicon glyphicon-record invert" rel="tooltip" title="Prueba hace un rato 2" id=""></i></a></div>
